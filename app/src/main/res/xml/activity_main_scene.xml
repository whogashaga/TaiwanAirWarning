<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/content_search_mode"
        motion:constraintSetStart="@id/content_normal_mode"
        motion:duration="300">
    </Transition>

    <ConstraintSet android:id="@+id/content_normal_mode">
        <Constraint
            android:id="@+id/rvBelowAvgPm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/toolbar" />

        <Constraint
            android:id="@+id/viewDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            motion:layout_constraintBottom_toTopOf="@+id/rvAboveAvgPm"
            motion:layout_constraintTop_toBottomOf="@+id/rvBelowAvgPm" />

        <Constraint
            android:id="@+id/rvAboveAvgPm"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/viewDivider" />

        <Constraint
            android:id="@+id/rvSearchRecords"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="@+id/toolbar" />

        <Constraint
            android:id="@+id/tvMessage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="@+id/toolbar">
            <PropertySet motion:visibilityMode="ignore" />
        </Constraint>

        <Constraint android:id="@+id/shimmerLoading">
            <PropertySet motion:visibilityMode="ignore" />
        </Constraint>

    </ConstraintSet>

    <ConstraintSet android:id="@+id/content_search_mode">

        <Constraint
            android:id="@+id/rvBelowAvgPm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/toolbar" />

        <Constraint
            android:id="@+id/viewDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            motion:layout_constraintBottom_toTopOf="@+id/rvAboveAvgPm"
            motion:layout_constraintTop_toBottomOf="@+id/rvBelowAvgPm" />

        <Constraint
            android:id="@+id/rvAboveAvgPm"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/viewDivider" />

        <Constraint
            android:id="@+id/rvSearchRecords"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/toolbar" />

        <Constraint
            android:id="@+id/tvMessage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/toolbar">
            <PropertySet motion:visibilityMode="ignore" />
        </Constraint>

        <Constraint android:id="@+id/shimmerLoading">
            <PropertySet motion:visibilityMode="ignore" />
        </Constraint>

    </ConstraintSet>
</MotionScene>