<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="300">
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/rvBelowAvgPm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/toolbar" />

        <Constraint
            android:id="@+id/viewDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            motion:layout_constraintTop_toBottomOf="@+id/rvBelowAvgPm"
            motion:layout_constraintBottom_toTopOf="@+id/rvAboveAvgPm" />

        <Constraint
            android:id="@+id/rvAboveAvgPm"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintTop_toBottomOf="@+id/viewDivider"
            motion:layout_constraintBottom_toBottomOf="parent" />

        <Constraint
            android:id="@+id/rvSearchRecords"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="@+id/toolbar" />

        <Constraint
            android:id="@+id/tvMessage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="@+id/toolbar" >
            <PropertySet motion:visibilityMode="ignore" />
        </Constraint>

        <Constraint
            android:id="@+id/shimmerLoading">
            <PropertySet motion:visibilityMode="ignore" />
        </Constraint>

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">

        <Constraint
            android:id="@+id/rvBelowAvgPm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/toolbar" />

        <Constraint
            android:id="@+id/viewDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            motion:layout_constraintTop_toBottomOf="@+id/rvBelowAvgPm"
            motion:layout_constraintBottom_toTopOf="@+id/rvAboveAvgPm" />

        <Constraint
            android:id="@+id/rvAboveAvgPm"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintTop_toBottomOf="@+id/viewDivider"
            motion:layout_constraintBottom_toBottomOf="parent" />

        <Constraint
            android:id="@+id/rvSearchRecords"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintTop_toBottomOf="@+id/toolbar"
            motion:layout_constraintBottom_toBottomOf="parent" />

        <Constraint
            android:id="@+id/tvMessage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintTop_toBottomOf="@+id/toolbar"
            motion:layout_constraintBottom_toBottomOf="parent" >
            <PropertySet motion:visibilityMode="ignore" />
        </Constraint>

        <Constraint
            android:id="@+id/shimmerLoading">
            <PropertySet motion:visibilityMode="ignore" />
        </Constraint>

    </ConstraintSet>
</MotionScene>